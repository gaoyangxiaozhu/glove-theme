if page.prev || page.next
    nav.article-nav.clearfix
        if page.prev
            a.prev(href="#{config.root}#{page.prev.path}" title="#{page.prev.title}")
                if page.prev.title
                    | #{page.prev.title}
                else
                    | PREVIOUS
        if page.next
            a.next(href="#{config.root}#{page.next.path}" title="#{page.next.title}")
                if page.next.title
                    | #{page.next.title}
                else
                    | NEXT



