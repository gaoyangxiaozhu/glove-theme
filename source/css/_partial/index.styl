/*! index layout */
#container
  width 95%
  margin 0 auto
  overflow hidden
  @media only screen and (min-width 768px)
    width 96%
  @media only screen and (min-width 1024px)
    width 94%
  @media only screen and (min-width 1560px)
    width 82%
    
#main
  margin 1rem 0 0
  line-height line-height+0.3
  @media only screen and (min-width 1024px)
    margin 2rem 0 0
    width 75%
    float left
  section.post
    background color-section
    margin-bottom .125rem
    a
      display block
      padding .5em
      @media only screen and (min-width 768px)
        padding 1em
      h1
        color color-yellow
        line-height line-height+0.5
        background-color color-theme
        display inline-block
        position relative
        margin 0 .2em
        left -1.8em
        padding-left 2em
        padding-right 1em
        border-radius 0 4px 4px 0
        border-color darken(color-theme, 20%)

        &:before
          @media only screen and (min-width 1024px)
            position absolute
            content ""
            top 100%
            left 0
            border-top 0 solid transparent
            border-right-width 1em
            border-right-color inherit
            border-right-style solid
            border-bottom 1em solid transparent
            border-left 0 solid transparent
            width 0
            height 0
      p
        color color-font
        padding 1em
      time
      span
        margin .5em 0
        font-size .5rem
        background-color color-blue
        padding .4em .6em
        color color-white
        display inline-block
        &:hover
          -webkit-animation flipInY 1s ease .2s
          -moz-animation flipInY 1s ease .2s
          -o-animation flipInY 1s ease .2s
          animation flipInY 1s ease .2s
      span
        margin-left 1em
        background-color color-blue-dark
        &:before
          font-family "FontAwesome"
          content "\f02c"
          margin-right .3em



.moveMain
  margin-left 10% !important

#page-nav
  background color-section
  text-align center
  overflow hidden
  a, span
    display inline-block
    padding .5em 1em
  a
    color color-blue
    &:hover
      background color-gray
      color color-theme
  .prev
    float left
    border-left .5em solid color-gray
    transition border-left .5s
    &:hover
      border-left .5em solid color-theme
  .next
    float right
  .page-number
    display none
    @media mini
      display inline-block
  .current
    color darken(color-gray, 10%)
    font-weight bold
  .space
    color color-blue

/*! page layout */
.page
  @media tablet
    margin-left 10% !important

/*! archive layout */
.category-icon:before, .tag-icon:before, .archive-icon:before
  font-family font-icon-family
  font-smoothing()
  color color-theme
  font-size font-size
  padding-right .3em

.category-icon:before
  content "\f07b"

.tag-icon:before
  content "\f02c"
  
.archive-icon:before
  content "\f187"

.archive-title
  margin 1em 0
  width 97%
  padding 2em 0 2em 3%
  @media only screen and (min-width 1024px)
    margin 2em 0
    width 18.5%
    padding-left .5%
    float left
  background color-section
  border-left .5em solid color-gray
  h2
    width 90%
    font-size font-size+20
  a
    transition color .5s
    &:hover
      color color-theme
      transition color .5s
.current
  color color-theme !important

.archive-part
  @media only screen and (min-width  768px)
     min-height 200px
  @media only screen and (min-width 1024px)
    width 78% !important
    float right
    margin-left 2% !important
  section.post
    width 100%
    @media only screen and (min-width 768px)
      float left
      width 50%
    @media only screen and (min-width 1024px)
      width 33.333%

.archive-nav
  @media only screen and (min-width 768px)
    width 100%
    float left
    margin-top 1em

/*! tags&categories layout */
.all-list-box
  min-height 400px
  
/* animation*/
@keyframes flipInY
  0%
    -webkit-transform rotateY(0deg) scale(.5, .5)
    transform rotateY(0deg)  scale(.5, .5)

  100%
    -webkit-transform rotateY(360deg) scale(1, 1)
    transform rotateY(360deg) scale(1, 1)



