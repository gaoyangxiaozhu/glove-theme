//sidebar
#asidepart
  background none
  margin 1em 0 0
  padding .5em 2% 1em
  @media only screen and (min-width 1024px)
    position relative
    float left
    width 18%
    margin 2em 3% 0 0

.asidetitle
  font-weight  bolder
  font-size 1.1rem
  color color-theme
  padding 0 0 .3125em
  border-bottom .15em dashed
  a
    &:hover
      color color-theme
      transition color .5s

.categorieslist
.tagslist
.tagcloudlist
.recentlist
.archiveslist
  p > span
    &:before
      font-family font-icon-family
      font-smoothing()
      margin-left .5em
      font-size inherit
.categorieslist p > span:before
  content "\f07b"
.tagslist p > span:before
  content "\f02c"
.tagcloudlist p > span:before
  content "\f0c2"
.recentlist p > span:before
  content "\f0f6"
.archiveslist p > span:before
  content "\f02d"
.categorieslist
.tagslist
  li
   float left
   a
    display block

.categorieslist
  @media only screen and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
  li a
    padding .6em
    &:hover
      color color-theme
//tag
.tagslist
  @media only screen and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
  ul
    padding .5em 0
    li a
      margin .3125em
      padding .125em .3125em
      background lighten(color-gray, 30%)
      &:hover
        color color-theme
        background lighten(color-gray, 50%)
//archive
.archiveslist
  @media only screen and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
  li
    font-size .8em
    line-height 2em
    a
      padding .4em
      &:hover
        color color-theme
        transition color .25s
  .archive-list-count
    &:before
      content "("
    &:after
      content ")"
.archive-list
  padding .5em 0

.archive-float
  ul
    padding 0
  li
    float left
    margin .3em
    @media only screen and (min-width 1024px)
      float none
//tagcloud
.tagcloudlist
  @media only screen and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
    a
      padding .2em
      display block
      float left
      &:hover
        color color-theme
        transition color .25s
//links
.linkslist
  margin-top .5em
  @media only screen and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
  ul
    padding .5em 0
    a
      font-size 1em
      line-height line-height
      display block
      padding 0 3%
      &:hover
        color color-theme
        transition color .25s
//recentPosts
.recentlist
  @media only screen  and (min-width 768px)
    width 45%
    float left
    margin 0 5% 0 0
  @media only  screen and (min-width 1024px)
    width 100%
    float none
    margin 1em 0 0
  ul
    background transparent !important
    padding .5em 0
    li
      font-size .8em
      line-height 2em
      a
        padding .4em
        font-size inherit
        color inherit
        &:hover
          color color-theme
          transition color .25s