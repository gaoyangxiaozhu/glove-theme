body
  background-attachment fixed
  >header
    width 100%
    background #1f1f1f
    opacity 0.88
    color color-white
    @media only screen and (max-width 568px)
      overflow hidden
    @media phone
      height 140px
    position relative
    padding 1.2em 0 0 0em
    >div
      width 100%
      margin 0 auto
      position relative
    a
      display block
      color color-white

#imglogo
  float left
  width 5em
  display none
  @media mini
    width @width+1
    position absolute
  @media tablet
    width @width+2.5
    margin-left 1.5em
    display block
  a
    background-color #f3f3f3
    border 4px solid lighten(#bbcb2c,20)
    padding .6em .2em .6em .2em
  img
    width 4em
    @media mini
      width @width+1
      transition transform 2s ease-out
      &:hover
        transform rotateZ(360deg)


    @media tablet
      width @width+2.5

#textlogo
  float left
  display inline-block
  margin-left 0.5em
  @media only screen and (max-width 567.9999px)
    font-size smaller
  @media only screen and (min-width 568px) and (max-width 767.9999px)
    margin-left 30% !important
    font-size  larger
  @media mini
    margin-left 14%
  @media tablet
    margin-left 11em
  h1.site-name
    display inline-block
    if ShowCustomFont
      font-family font-custom-family
      font-size font-size+100
      line-height line-height
      font-smoothing()
      @media mini
        font-size font-size+140
      @media tablet
        font-size font-size+180
    else
      font-family font-default
      font-size font-size+60
      line-height line-height+0.4
      font-weight normal
      @media mini
        font-size font-size+90
      @media tablet
        font-size font-size+120
  h2.blog-motto
    font-size 0.7em
    font-weight normal
    @media mini
      font-size font-size
    @media tablet
      font-size font-size+10
.icon
  @media only screen and (max-width 568px)
    display none
  @media only screen and (max-width 767.9999px)
    margin-left 30%
  @media mini
    margin-left 2em
  @media tablet
    margin-left 5em
  display inline-block
  position relative
  top 10px
  [class^="icon-"],
  [class*=" icon-"]
    opacity .5
    cursor pointer
    transition all .2s linear
    &:hover
      opacity 1
  a
    display inline-block
    position relative
    float left
    height 4em
    width 4em
    margin-right 1em
    border-radius .5em
    &:before
      display inline-block
      position absolute
      font-family "FontAwesome"
      font-size 3em
      width 100%
      height 100%
      left .5rem
  .icon-weibo
    background-color #d52727
    &:before
      content "\f18a"
  .icon-github
    background-color #000
    &:before
      content "\f09b"
  .icon-facebook
    background-color #3b5998
    &:before
      content "\f09a"
  .icon-rss
    background-color #faac1e
    &:before
      content "\f09e"

.navbar
  position absolute
  width 2em
  right 0em
  top 0em
  padding 0.5em
  @media phone
    display none

.navbutton::before
  font-family font-icon-family
  font-smoothing()
  content "\f0c9"

.navmobile::before
  padding-left 1em

header nav
  float left
  width 100%
  background-color  #3d8b76 //可设为主题颜色
  font-size font-size+12.5
  max-height 0
  transition max-height 1s ease-out
  margin-top 1em
  @media phone
    width 100%
    margin-top 1em
    max-height none
  ul
    @media phone
      width 100%
      margin-top 0
  ul li
    text-align center
    padding-top .5em
    @media phone
      float left
      width 33%
      min-height 50px
      text-align center
      padding-top .5em
  ul li a
    display inline-block
    @media phone
      padding 0em 1em 0em 1em
      position relative
      font-weight bold
      font-size larger
      &:after
          content ""
          position absolute
          bottom 0
          left 0
          width 100%
          height 6px
          background-color #bbcb2c
          opacity  0
          transform  translateY(33px)
          transition all .4s ease-in
      &:hover:after
          opacity 1
          transform translateY(17px)

.shownav
  max-height 40em

